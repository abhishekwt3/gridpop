<div class="popup-template popup-template--survey">
  <button type="button" class="popup-close">&times;</button>
  <h2>Quick Survey</h2>
  <p>Help us improve your experience</p>
  <form class="survey-form" action="/survey" method="POST">
    <select name="feedback" required>
      <option value="">How did you find us?</option>
      <option value="social">Social Media</option>
      <option value="search">Search Engine</option>
      <option value="friend">Friend Recommendation</option>
    </select>
    <button type="submit" class="pop-button">Submit</button>
  </form>
</div>
